{
  "name": "server",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/server/src",
  "projectType": "application",
  "tags": [
    "api",
    "server"
  ],
  "targets": {
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "server:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "server:build:development",
          "inspect": true
        },
        "production": {
          "buildTarget": "server:build:production",
          "buildTargetOptions": {
            "generatePackageJson": true
          }
        }
      }
    },
    "docker-build": {
      "dependsOn": [
        "build"
      ],
      "command": "docker build -f apps/server/Dockerfile . -t \"briestone/chattr-server:$(CHATTR_VERSION)\""
    },
    "docker-push": {
      "dependsOn": [
        "docker-build"
      ],
      "command": "docker push -f apps/server/Dockerfile . -t \"briestone/chattr-server:$(CHATTR_VERSION)\""
    }
  }
}
