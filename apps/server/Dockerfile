# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build server`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t server`.
FROM docker.io/node:lts-alpine

RUN apk add --no-cache python3 py3-pip make gcc g++ git libuv bash curl tar bzip2 linux-headers
RUN npm install -g pnpm

ENV SERVER_PORT=3000
ENV NODE_ENV=production
ENV JWT_KEY=
ENV DB_NAME=chattr_db_${NODE_ENV}
ENV DB_URI=
ENV RTC_MIN_PORT=40000
ENV RTC_MAX_PORT=50000
ENV DTLS_CERT_PATH=
ENV DTLS_PRIVATE_PATH=
ENV ANNOUNCED_IP=
ENV TRANSPORT_PROTOCOL=udp

WORKDIR /app

RUN addgroup --system server && \
    adduser --system -G server server

COPY dist/apps/server server/
RUN chown -R server:server .

WORKDIR /app/server

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN pnpm i --frozen-lockfile --prod

EXPOSE ${SERVER_PORT}
EXPOSE ${RTC_MIN_PORT}-${RTC_MAX_PORT}/${TRANSPORT_PROTOCOL}

CMD [ "node", "main.js" ]
